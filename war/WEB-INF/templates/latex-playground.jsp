<div class="latex-playground hidden">
	<div class="lpg-header">
		<h4>LaTex Playground</h4>
		<button class="btn btn-primary lpg-toggle lpg-hide">Hide</button>
	</div>
	<div class="lpg-body">
		<div class="btn-group lpg-toolbar">
			<button class="btn btn-default lpg-button" data-tex="\int \, dx">\(\int \, dx\)</button>
			<button class="btn btn-default lpg-button" data-tex="\frac {numerator} {denominator}">\(\frac {numerator} {denominator}\)</button>
			<button class="btn btn-default lpg-button" data-tex="{base} ^ {power}">\({base} ^ {power}\)</button>
			<div class="input-group-btn lpg-button">
				<button type="button" class="btn btn-default dropdown-toggle lpg-button" data-toggle="dropdown" aria-expanded="false">Symbols  <span class="fa fa-caret-down"></span></button>
				<ul class="dropdown-menu">
				  <li><a >Action</a></li>
				  <li><a >Another action</a></li>
				  <li><a href="#">Something else here</a></li>
				  <li class="divider"></li>
				  <li><a href="#">Separated link</a></li>
				</ul>
			</div>
		</div>
		<label>LaTex Expression</label>	
		<span>	
			<input type="text" class="lpg-input-box form-control" placeholder="Start Assembling Your LaTex Expression here!"/>
		</span>
		<label>Result</label>
		<div class="lpg-result-box" id="lpg-result-box">
		
		</div>
		<br/>
	</div>
	<div class="lpg-footer">
		<button class="btn btn-success lpg-insert-into-solution">Insert Into Solution</button>
		<button class="btn btn-success lpg-insert-into-body">Insert Into Body</button>
	</div>
</div>